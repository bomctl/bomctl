---
extends: default

ignore-from-file: .gitignore

locale: en_US.UTF-8

rules:
  comments:
    min-spaces-from-content: 1

  braces:
    forbid: non-empty

  indentation:
    spaces: 2

  line-length:
    level: warning
    max: 120

  quoted-strings:
    quote-type: double
    required: only-when-needed
    check-keys: true

  truthy:
    check-keys: false
